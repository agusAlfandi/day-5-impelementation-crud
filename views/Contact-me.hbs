    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/style.css" />
    
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-nav">
      <div class="container">
        <!--start left side -->
        <a class="navbar-brand">
          <img src="../public/img/logo.png" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
          </ul>
          <!--end left side -->

          <!--start right side -->
          <form class="d-flex" role="search">
            <button class="btn btn-custom text-white" type="submit">
              <a
                class="text-decoration-none text-white"
                href="/Contact-me"
              >Contact Me</a>
            </button>
          </form>
          <!--end right side -->
        </div>
      </div>
    </nav>
    <!-- Navbar -->

    <!-- Start Form contact me -->
    <div
      class="container-form-2 d-flex justify-content-center align-items-center"
    >
      <form>
        <h1 class="text-center p-1">Get In Touch</h1>
        <div class="mb-3">
          <label for="input-full-name" class="form-label">Full Name</label>
          <input
            type="name"
            class="form-control"
            id="fullname"
            name="fullname"
          />
        </div>
        <div class="mb-3">
          <label for="input-email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input type="phone" class="form-control" id="phone" name="phone" />
        </div>
        <div class="mb-3">
          <label class="mb-2">Subject</label>
          <div class="input-group">
            <label
              class="input-group-text"
              for="subject"
            >Choose</label>
            <select class="form-select" id="subject" name="subject">
              <option selected hidden>Choose...</option>
              <option>Let's Talk</option>
              <option>Let's Collaboration</option>
              <option>I am Hiring</option>
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control desc-contact-me"
            id="description"
            rows="3"
            placeholder="Write Your Message"
            name="description"
          ></textarea>
        </div>
        <div class="d-flex justify-content-end">
          <button type="button" class="btn btn-dark" onclick="ContacMe()">Submit</button>
        </div>
      </form>
    </div>
    <!-- End Form contact me -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  <script src="../JavaScript/ContactMe.js"></script>
  </body>
</html>