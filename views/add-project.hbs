<html lang="en">
  <head>
    <!-- <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/style.css" />

  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-nav">
      <div class="container">
        <!--start left side -->
        <a class="navbar-brand">
          <img src="../public/img/logo.png" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link button-active" href="/add-project">Add Project</a>
            </li>
          </ul>
          <!--end left side -->

          <!--start right side -->
          <form class="d-flex" role="search">
            <button class="btn btn-custom text-white" type="submit">
              <a class="text-decoration-none text-white" href="/Contact-me">
                Contact Me
              </a>
            </button>
          </form>
          <!--end right side -->
        </div>
      </div>
    </nav>
    <!-- Navbar -->

    <!-- Form -->
    <div
      class="container-form d-flex justify-content-center align-items-center"
    >
      <form action="/add-project" method="POST">
        <h1 class="text-center p-1">Add My Project</h1>
        {{! <button type="submit" class="btn">Add Project</button> }}
        <div class="mb-3">
          <label for="project-name" class="form-label">Project Name</label>
          <input
            name="title"
            type="name"
            class="form-control"
            id="project-name"
        
          />
        </div>
        <div class="d-flex mb-3">
          <div class="start-date">
            <div class="mb-3">
              <label for="start-input">Start Date</label>
            </div>
            <input id="start-input" type="date" name="startDate" />
          </div>
          <div class="end-date">
            <div class="mb-3">
              <label for="end-input">End Date</label>
            </div>
            <input id="end-input" type="date" name="endDate" />
          </div>
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control textarea-risize"
            id="desc"
            rows="3"
          ></textarea>
        </div>
        <div class="mb-3">
          <label class="mb-2">Technologies</label>
          <div class="d-flex mb-3">
            <div class="right-chechbox">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="node"
                  id="node"
                  name="technologies"
                />
                <label class="form-check-label" for="node">
                  <img src="../public/img/node.png " alt="" />
                  Node JS
                </label>
              </div>

              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="react"
                  id="react"
                  name="technologies"
                />
                <label class="form-check-label" for="react">
                  <img src="../public/img/react.png" alt="" />
                  React JS
                </label>
              </div>
            </div>
            <div class="left-chechbox">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="javascript"
                  id="javascript"
                  name="technologies"
                />
                <label class="form-check-label" for="javascript">
                  <img src="../public/img/javascript.png" alt="" />
                  JavaScript
                </label>
              </div>

              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="typescript"
                  id="typescript"
                  name="technologies"
                />
                <label class="form-check-label" for="typescript">
                  <img src="../public/img/typescript.png" alt="" />
                  TypeScript
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Image</label>
          <input class="form-control" type="file" id="upload" name="image" />
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-dark">Submit</button>
        </div>

      </form>
    </div>
    <!-- Form -->
    {{! <script src="../JavaScript/MyProject.js"></script> }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>