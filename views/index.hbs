      <div class="card p-3 shadow m-5 card-project" style="width: 18rem">
        <a class="text-decoration-none text-black" href="/DetailProject/{{this.id}}">
          <img src="../public/img/mobile-apps.jpg" class="rounded img-project mb-3" alt="..." />
          <div class="card-body">
            <h5 class="card-title manage-title-list">{{this.title}}</h5>
            <p class="mb-1">{{this.time}}</p>
            <p class="card-text p-desc-project">
              {{this.description}}
            </p>

            <div class="icon mb-3">
              {{#each this.technologies}}
